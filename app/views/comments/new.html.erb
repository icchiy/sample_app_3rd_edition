<div class="row form">
  <div class="col-lg-12">
    <%= form_for [@micropost, @comment] do |f| %>
    <h3><span>to  <%= @micropost.user.name %></span></h3><p>>  <%= @micropost.content %></p>
      <div class="form-group">
        <%= f.text_area :comment, placeholder: "please your comment in here.", cols:"30", rows:"10", autofocus:"true", class:"form-control" %>
      </div>
      <%= f.hidden_field :micropost_id %>
      <%= f.hidden_field :user_id %>
      <%= f.submit "送信する", class:"btn btn-primary withripple"%>
    <% end %>
  </div>
  <div class="col-lg-12">
   <% if @micropost.comments %>
        <% @micropost.comments.each do |comment| %>
          <p><%= comment.comment %></p>
          nil comment
        <% end %>
        <% else %>
      <p>なし</p>
    <% end %>
  </div>
</div>
